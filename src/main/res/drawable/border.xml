<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#55000000" />  <!-- Shadow color (semi-transparent black) -->
            <corners android:radius="35dp" />  <!-- Rounded corners with 35dp radius -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />  <!-- Padding to give space for the shadow -->
        </shape>
    </item>

    <!-- Rectangle Layer -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FFEB3B" />  <!-- Background color (Yellow like in the image) -->
            <corners android:radius="35dp" />  <!-- Rounded corners with 35dp radius -->
        </shape>
    </item>
</layer-list>
